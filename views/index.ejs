<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Task App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 min-h-screen text-white">

  <div class="max-w-5xl mx-auto p-10">

    <!-- Form -->
    <div class="form p-10 text-white">
      <form action ="/create" method="post">
      <input 
        type="text" 
        placeholder="Title goes here.." name="title"
        class="w-full mb-4 p-3 rounded-md bg-zinc-800 outline-none"
      >

      <textarea 
        placeholder="Write your task details here..." name="details" 
        class="w-full mb-4 p-3 rounded-md bg-zinc-800 outline-none"
      ></textarea>

      <button class="bg-blue-600 px-5 py-2 rounded-md">
        Create Task
      </button>
    </form>
    </div>

    <!-- Tasks -->
    <div class="tasks p-10 flex gap-6">

      

  <% if (files.length > 0) { %>

    <% files.forEach(function(val) { %>
      <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
        <h1 class="text-white text-3xl tracking-tighter">
          <%= val %>
        </h1>
        <a class="text-blue-500 inline-block mt-3" href="#">
          Read More.
        </a>
      </div>
    <% }) %>

  <% } else { %>
    <h3 class="text-zinc-600">no tasks yet</h3>
  <% } %>

</div>

    </div>

  </div>

</body>
</html>
